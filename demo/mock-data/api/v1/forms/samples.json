{
  "components": [
    {
      "id": "textInputs",
      "type": "header",
      "label": "header.text_inputs"
    },
    {
      "id": "simpleText",
      "type": "textInput",
      "label": "Simple text",
      "placeholder": "abracadabra (from 5 to 15 characters)",
      "constraints": {
        "min": 5,
        "max": 15
      }
    },
    {
      "id": "simpleTextUtf",
      "type": "textInput",
      "label": "Simple text, UTF8 test: öäõüžš",
      "placeholder": "öäõüžš"
    },
    {
      "id": "simpleTextWoLabel",
      "type": "textInput",
      "placeholder": "I have no label!"
    },
    {
      "id": "simpleTextRequired",
      "type": "textInput",
      "label": "Simple text (required)",
      "placeholder": "abracadabra (up to 15 characters)",
      "constraints": {
        "max": 15,
        "required": true
      }
    },
    {
      "id": "simpleTextDisabled",
      "type": "textInput",
      "label": "Simple text (disabled)",
      "constraints": {
        "disabled": true
      }
    },
    {
      "id": "simpleTextWithHelp",
      "type": "textInput",
      "label": "Simple text with help",
      "placeholder": "abracadabra (up to 15 characters)",
      "description": {
        "title": "Some title",
        "content": "Some help content for this field"
      }
    },
    {
      "id": "numberInputs",
      "type": "header",
      "label": "Number inputs"
    },
    {
      "id": "positiveNumber",
      "type": "numberInput",
      "label": "Positive number",
      "placeholder": "Number in range 0...999",
      "constraints": {
        "min": 0,
        "max": 999
      }
    },
    {
      "id": "negativeNumber",
      "type": "numberInput",
      "label": "Negative number",
      "placeholder": "Number in range -999...-1",
      "constraints": {
        "min": -999,
        "max": -1
      }
    },
    {
      "id": "sum",
      "type": "textInput",
      "label": "Sum of positive & negative",
      "functions": [
        "setData(!positiveNumber ? undefined : positiveNumber >= 1 && positiveNumber < 58 ? '1TA - ÜHE' : positiveNumber < 69 ? '1TA - MITME' : positiveNumber < 112 ? 'Mittest.' : undefined)",
        "setData(positiveNumber + negativeNumber)"
      ]
    },
    {
      "id": "numberInputRequired",
      "type": "numberInput",
      "label": "Number input (required)",
      "constraints": {
        "required": true
      }
    },
    {
      "id": "numberInputDisabled",
      "type": "numberInput",
      "label": "Number input (disabled)",
      "constraints": {
        "disabled": true
      },
      "description": {
        "content": "Some help content for required numeric without title."
      }
    },
    {
      "id": "numberInputWithHelp",
      "type": "numberInput",
      "label": "Number input with help",
      "description": {
        "title": "Some title",
        "content": "Some help content for numeric field"
      }
    },
    {
      "id": "selectControls",
